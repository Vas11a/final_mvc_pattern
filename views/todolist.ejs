<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Tasks list</title>
</head>
<body>
    <div class="flex flex-col items-center gap-5 p-10">
        <div class="flex gap-5 items-center">
            <h1 class="font-semibold text-3xl">Tasks</h1>
            <a href="/add" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Add</a>
        </div>
        <% tasks.forEach(task => { %>
        <div class="py-2 cursor-pointer px-5 max-w-96 border-2 border-gray-300">
            <div class="flex gap-5 items-end">
                <div class="font-semibold text-2xl"><%= task.description %></div>
                <div><%= task.date %></div>
            </div>
            <div class="pt-3 flex gap-2 items-center justify-end">
                <div class="w-3 h-3 rounded-full <% if (task.status === 'Dont started') { %>bg-red-500<% } else if (task.status === 'In progress') { %>bg-yellow-500<% } else if (task.status === 'Done') { %>bg-green-500<% } %>"></div>
                <div class="font-semibold "><%= task.status %></div>
            </div>
            <div class="flex justify-end">
                <a href="/task/<%= tasks.indexOf(task) %>/edit" class="text-blue-600 font-semibold ">Edit</a>
            </div>
        </div>
        <% }); %>
    </div>
</body>
</html>
